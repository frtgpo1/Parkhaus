@model Parking.Models.EntryModel

<div class="wrapper">
  <div class="page-header section-dark entry-wallpaper">
    <div class="filter"></div>
    <div class="content-center">
      <div class="container">
        <div class="title-brand">
          <h1 class="presentation-title">Dauer?</h1>
        </div>
        <h2 class="presentation-subtitle text-center">Bitte wählen Sie, ob Sie als Dauerparker <br /> oder Kurzzeitparker hier sind.</h2>
      </div>
    </div>
    @using ( @Html.BeginForm( "Index", "Home", FormMethod.Post, new { @class = "entry-form" } ) )
    {
      <input type="submit" class="btn btn-danger entry-submit" value="Dauerparker" formaction=@Url.Action("Register") />
      <input type="submit" class="btn btn-danger entry-submit" value="Kurzzeitparker" formaction=@Url.Action("NewShortTerm") />
      @Html.HiddenFor( m => m.LicensePlate)
    }
  </div>
</div>